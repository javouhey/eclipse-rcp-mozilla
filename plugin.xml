<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="rcp.with.scala.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="RCP Perspective"
            class="rcp.with.scala.Perspective"
            id="rcp.with.scala.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="rcp.with.scala.BrowserView"
            id="view.browser"
            name="Mozilla">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="command.quit"
            name="Quit">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="rcp.with.scala.contributions.QuitHandler"
            commandId="command.quit">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  id="file.exit.id">
               <visibleWhen
                     checkEnabled="true">
               </visibleWhen>
            </command>
            <separator
                  name="additions"
                  visible="false">
            </separator>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="rcp.with.scala.inview">
         <with
               variable="activePartId">
            <equals
                  value="view.browser">
            </equals>
         </with>
      </definition>
   </extension>

</plugin>
